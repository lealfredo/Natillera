<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Natillera.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Natillera.Views"
    Title="Natillera">

    <FlyoutItem Title="Menu" FlyoutDisplayOptions="AsMultipleItems" Icon="settings.png">
        <Tab Title="Rifa" Icon="trophy.png">
            <ShellContent ContentTemplate="{DataTemplate views:RafflePage}" />
        </Tab>
        <Tab Title="Ganadores" Icon="trophy.png">
            <ShellContent ContentTemplate="{DataTemplate views:RaffleWinnersPage}" />
        </Tab>
        <Tab Title="Historico" Icon="trophy.png">
            <ShellContent ContentTemplate="{DataTemplate views:RaffleHistoryPage}" />
        </Tab>
    </FlyoutItem>

    <ShellContent ContentTemplate="{DataTemplate views:RafflePage}" />
    <ShellContent ContentTemplate="{DataTemplate views:RaffleWinnersPage}" />
    <ShellContent ContentTemplate="{DataTemplate views:RaffleHistoryPage}" />

</Shell>
