<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Natillera.Views.BetPage"
             xmlns:viewModels="clr-namespace:Natillera.ViewModels"
             x:DataType="viewModels:BetViewModel"
             Title="{Binding Title}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Número seleccionado (NO editable) -->
            <Border Padding="10" BackgroundColor="#333" >
                <Label
                    Text="{Binding SelectedNumber}"
                    FontSize="24"
                    HorizontalOptions="Center"
                    TextColor="White"
                    FontAttributes="Bold"/>
            </Border>

            <!-- Teléfono -->
            <Entry
                Placeholder="Teléfono"
                Keyboard="Telephone"
                Text="{Binding ParticipantPhone}"
                Unfocused="OnPhoneUnfocused"/>

            <!-- Nombre -->
            <Entry
                Placeholder="Nombre del participante"
                Text="{Binding ParticipantName}"
                IsEnabled="{Binding IsNewParticipant}" />

            <Button
                Text="Guardar apuesta"
                Command="{Binding SaveBetCommand}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
